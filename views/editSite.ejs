<%- include("partials/header", {userName : userName}) -%>
  <div class="text-center edit-table">
    <form action="/edit" method="post">
      <h2 class="text-center h3 mb-4 font-weight-normal">
        <%= editItem[0].SiteName %>
      </h2>
      <table class="table table-striped table-rounded text-center">
        <tr>
          <th scope="row">
            <label class="col-form-label" for="name">Site Name</label>
          </th>
          <td>
            <input class="form-control rounded-pill" type="text" name="siteName" id="name" placeholder="<%= editItem[0].SiteName %>" />
          </td>
        </tr>
        <tr>
          <th scope="row">
            <label class="col-form-label" for="createdDate">Created Date</label>
          </th>
          <td>
            <% let datetime = editItem[0].CreatedDate %>
            <% let date = new Date(datetime); %>
            <input class="form-control rounded-pill" type="datetime" name="createdDate" id="createdDate" value="<%= datetime.toDateString() %>"
              readonly />
          </td>
        </tr>
        <tr>
          <th scope="row">
            <label class="col-form-label" for="createdBy">Created By</label>
          </th>
          <td>
            <input class="form-control rounded-pill" type="text" name="createdBy" id="createdBy" value="<%= editItem[0].CreatedBy %>" readonly />
          </td>
        </tr>
        <tr>
          <td colspan="2">
            <button class="mt-3 btn btn-lg btn-outline-info btn-block rounded-pill" type="submit" name="editId" value="<%= editItem[0]._id %>">
              Save
            </button>
          </td>
        </tr>
      </table>
    </form>
  </div>
  <%- include("partials/footer") -%>